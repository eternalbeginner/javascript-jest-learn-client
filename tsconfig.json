{
  "$schema": "https://json.schemastore.org/tsconfig",
  "buildOptions": {
    "verbose": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.tsx", "*.ts"]
}
